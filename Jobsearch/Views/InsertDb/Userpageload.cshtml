@model Jobsearch.Models.UserInsert
@{
    ViewBag.Title = "Userpageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Registration Form</h1>
<div>
    @using (Html.BeginForm("usInsert_click","InsertDb",FormMethod.Post,new{enctype="multipart/form-data"}))
    {
        <div>
            <label>Name :</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label>Age :</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.age)
            @Html.ValidationMessageFor(m => m.age)
        </div>
        <div>
            <label>Address :</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.address)
            @Html.ValidationMessageFor(m => m.address)
        </div>
        <div>
            <label>Phone :</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>
        <div>
            <label>Email :</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>
        <div>
            <label>Photo :</label>
        </div>
        <div>
            @Html.TextBox("file", "", new { Type = "file" })
        </div>
        <div>
            <label>Skills :</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.skills)
            @Html.ValidationMessageFor(m => m.skills)
        </div>
        <div>
            <label>Experience (in year) :</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.expinyear)
            @Html.ValidationMessageFor(m => m.expinyear)
        </div>
        <div>
            <label>Location :</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.location)
            @Html.ValidationMessageFor(m => m.location)
        </div>
        <div>
            <label>Qualification :</label>
        </div>
        <div>
            @foreach (var item in Model.MyFavoriteQual)
            {
                <label>
                    <input type="checkbox" value="@item.Value" checked="@item.IsChecked" name="selectedQual" id="@item.Value" /> @Html.Raw(item.Text)
                </label>
            }
        </div>
        <div>
            <label>User Name :</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)
        </div>
        <div>
            <label>Password :</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.pass)
        </div>
        <div>
            <label>Confirm Password :</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.cpassword)
            @Html.ValidationMessageFor(m => m.cpassword)
        </div>
        <div>
            <input type="submit" value="Insert" />
            @Html.DisplayFor(m => m.usermsg)
        </div>
    }
</div>

